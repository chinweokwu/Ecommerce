<%= turbo_frame_tag "cart" do %>
  <h1 class="text-6xl font-bold text-center"> Carts</h1>
  <% if @cart.orders.count > 0%>
    <%= render "cart/orders" %>
    <p class="text-2xl font-bold text-blue mx-3"> Total: $<%= @cart.total%>
    </p>
  <%else%>
    <p  class="text-2xl font-bold text-center my-5">Your cart is empty</p>
  <% end %>
<%end%>

