<% @cart.orders.each do |order| %>
  <% product = order.product%>
  <div id="<%= "cart-#{product.id}" %>">
    
    <div class="flex justify-between">
        <h4 class="font-bold capitalize "><%= product.category.name %></h4>

        <p class="text-2xl font-bold mx-3 text-right">$<%= order.total%></p>
    </div>
    <div class="max-w-lg m-5 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
      <div class="p-5">
        <div class="flex justify-between">
          <div><p class="text-lg font-bold"><%= product.name %></p></div>
          <div>
              <%= form_with(url: cart_remove_path) do |f|%>
                <%= f.hidden_field :id, value: order.id %>
                <%= f.submit "remove from Cart" , class:"btn btn-red" %>
              <%end%>
            </div>
        </div>
        <p><%= product.shrink_description %>  </p>
           
        <div class="flex justify-between">
          <div>
            <p>$<%= product.price %></p>
          </div>
          <div>
            <%= form_with(url: cart_add_path) do |f|%>
              <%= f.hidden_field :id, value: product.id %>
              <%= f.number_field :quantity, value: order.quantity, min: 0, class: "quantity_field" %>
              <%= f.submit "Add to Cart" , class:"btn btn-blue" %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>

